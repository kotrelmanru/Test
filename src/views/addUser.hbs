<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ADD USER</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      .full {
        background-color: #e3e7eb;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: flex-start;
      }
      form {
        background-color: #e3e7eb;
        padding: 30px;
        border-radius: 10px;
        width: 500px;
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 100px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      h2 {
        text-align: center;
        font-weight: bold;
      }
      .button {
        background-color: black;
        color: white;
        font-size: 15px;
        font-weight: bold;
        border: none;
        border-radius: 15px;
        padding: 5px 20px;
        transition: background-color 0.3s ease;
      }
      .button:hover {
        background-color: #333;
      }
    </style>
  </head>
  <body>
    <div class="full">
      <!-- Form untuk menambahkan user -->
      <form action="/users" method="POST">
        <h2>ADDING USER</h2>

        {{#if errors}}
          <ul class="alert alert-danger">
            {{#each errors}}
              <li>{{this.msg}}</li>
            {{/each}}
          </ul>
        {{/if}}

        <div>
          <label for="name">Nama</label>
          <input type="text" id="name" name="name" class="form-control" value="{{oldData.name}}" />
        </div>
        <div>
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" value="{{oldData.email}}" />
        </div>
        <div>
          <label for="age">Umur</label>
          <input type="number" id="age" name="age" class="form-control" value="{{oldData.age}}" />
        </div>
        <div class="text-right">
          <button type="submit" class="button">ADD</button>
        </div>
      </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
